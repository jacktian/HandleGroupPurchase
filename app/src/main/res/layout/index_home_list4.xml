<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/little_sapce" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_space" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="折后减50元"
                    android:textColor="#844833"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_title_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="闪慧5秒买单" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iamge_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_baby" />
        </LinearLayout>
        <View 
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/normal_bg_color"/>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_space" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="闪慧1元吃"
                    android:textColor="#ea881f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_title_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折后满21减20" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iamge_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_coffee" />
        </LinearLayout>
    </LinearLayout>
    <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            
            android:background="@color/normal_bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_space" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="半价吃火锅"
                    android:textColor="#df5f87"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_title_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更享高额立减" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iamge_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_car" />
        </LinearLayout>
        <View 
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/normal_bg_color"/>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_space" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="闪慧自助餐"
                    android:textColor="#3b85c6"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_title_44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高立减50" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iamge_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_beauty" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>