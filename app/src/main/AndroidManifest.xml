<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="yinlei.com.handlegrouppurchase">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".common.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_home"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.guide.GuideActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.search.SearchActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.tip.TipActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.location.LocationActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.category.CategoryActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>